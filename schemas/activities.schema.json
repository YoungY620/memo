{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "activities.schema.json",
  "title": "_activities.json",
  "description": "Activity tracking (TODO, Bug, Issue, etc.)",
  "type": "object",
  "maxProperties": 100,
  "additionalProperties": {
    "type": "object",
    "properties": {
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string",
              "minLength": 1,
              "maxLength": 5000,
              "description": "Activity content/description"
            },
            "tags": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1,
                "pattern": "^[a-z][a-z0-9-]*$"
              },
              "uniqueItems": true,
              "description": "Tag list (must be defined in root _tags.json)"
            },
            "file": {
              "type": "string",
              "minLength": 1,
              "description": "Related source file path (optional)"
            },
            "line": {
              "type": "integer",
              "minimum": 1,
              "description": "Line number in source file (optional)"
            },
            "priority": {
              "type": "string",
              "enum": ["low", "medium", "high", "critical"],
              "description": "Priority level (optional)"
            },
            "status": {
              "type": "string",
              "enum": ["open", "in-progress", "resolved", "closed"],
              "description": "Current status (optional)"
            }
          },
          "required": ["content"],
          "additionalProperties": false
        },
        "description": "Activity items of this type"
      },
      "children": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[a-z][a-z0-9-/]*$",
          "description": "Relative path to child module"
        },
        "uniqueItems": true,
        "description": "Child modules containing activities of this type"
      }
    },
    "required": ["items", "children"],
    "additionalProperties": false
  },
  "propertyNames": {
    "minLength": 1,
    "maxLength": 50,
    "pattern": "^[a-z][a-z0-9-]*$",
    "description": "Activity type name"
  }
}
