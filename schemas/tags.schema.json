{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tags.schema.json",
  "title": "_tags.json",
  "description": "Global tag definitions (root directory only)",
  "type": "array",
  "items": {
    "type": "string",
    "minLength": 1,
    "maxLength": 50,
    "pattern": "^[a-z][a-z0-9-]*$",
    "description": "Tag name: lowercase letters, digits, hyphens; must start with letter"
  },
  "uniqueItems": true,
  "minItems": 0,
  "maxItems": 100
}
